<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.profileapplication1">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProfileApplication1">
        <activity android:name=".Activities.WebViewActivity"
            android:label="Creater's website"></activity>
        <activity android:name=".Activities.FavouriteBookActivity"
            android:label="Favourite Books"></activity>
        <activity android:name=".Activities.WantToReadBooksActivity"
            android:label="WishList"/>
        <activity android:name=".Activities.AlreadyReadBooksActivity"
            android:label="Already Read Books"/>
        <activity android:name=".Activities.CurrentlyReadingActivity"
            android:label="Currently Reading"/>
        <activity android:name=".BookActivity" />
        <activity android:name=".Activities.AllBooksActivity"
            android:label="All Books"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>